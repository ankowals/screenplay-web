<aspectj>
    <weaver>
        <!-- only weave classes in our application-specific packages -->
        <include within="com.github.ankowals.domain..*" />
        <include within="com.github.ankowals.tests..*" />
        <include within="com.github.ankowals.framework.logging..*" />
    </weaver>
    <aspects>
        <!-- weave in just this aspects -->
        <concrete-aspect name="com.github.ankowals.framework.logging.ConcreteLogAspect" extends="com.github.ankowals.framework.logging.AbstractLogAspect">
            <pointcut name="scope" expression="execution(* com.github.ankowals.framework.web.pom.page.BasePage+.*(..))
                || execution(public com.github.ankowals.framework.screenplay.* com.github.ankowals.domain..*(..))"/>
        </concrete-aspect>
        <aspect name="com.github.ankowals.framework.logging.TestExceptionLoggerAspect"/>
    </aspects>
</aspectj>